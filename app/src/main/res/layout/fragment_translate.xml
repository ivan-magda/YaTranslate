<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fr_translate_root"
    android:name="com.ivanmagda.yatranslate.fragments.TranslateFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="false"
    tools:context="com.ivanmagda.yatranslate.fragment.TranslateFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_translate_input_container"
            style="@style/TranslateInputCardView"
            app:cardPreventCornerOverlap="false"
            app:contentPadding="@dimen/card_view_content_padding">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/langs_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_from_lang"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        tools:text="From lang translate" />

                    <ImageButton
                        android:id="@+id/btn_swap_langs"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight=".2"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_swap_horiz_holo_light" />

                    <Button
                        android:id="@+id/btn_to_lang"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        tools:text="To lang translate" />
                </LinearLayout>

                <EditText
                    android:id="@+id/et_translate_input"
                    style="@style/TranslateInputField"
                    android:layout_below="@+id/langs_container"
                    android:layout_marginTop="@dimen/edit_text_vertical_margin" />

                <ImageButton
                    android:id="@+id/bt_translate"
                    style="@style/TranslateIBtn"
                    android:contentDescription="@string/CD_translate" />

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/bt_translate"
                    android:layout_alignTop="@id/bt_translate"
                    android:layout_centerHorizontal="true"
                    android:indeterminate="true"
                    android:visibility="gone" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_translate_result_container"
            style="@style/TranslateResultCardView"
            app:cardPreventCornerOverlap="false"
            app:contentPadding="@dimen/card_view_content_padding">

            <TextView
                android:id="@+id/tv_translate_result"
                style="@style/TranslateResultTextView" />
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</ScrollView>
