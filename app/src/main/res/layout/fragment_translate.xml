<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fr_translate_root"
    android:name="com.ivanmagda.yatranslate.fragments.TranslateFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="false"
    tools:context="com.ivanmagda.yatranslate.fragment.TranslateFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_translate_input"
            style="@style/TranslateInputField"
            android:freezesText="true" />
    </LinearLayout>

</ScrollView>
