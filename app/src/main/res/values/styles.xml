<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Translate Fragment-->

    <style name="TranslateInputField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/translate_hint</item>
        <item name="android:inputType">text|textAutoComplete|textMultiLine|textAutoCorrect</item>
        <item name="android:layout_marginLeft">@dimen/edit_text_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/edit_text_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/edit_text_vertical_margin</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <!--Bookmark Fragment-->

    <!-- Style for a tab that displays a category name -->
    <style name="CategoryTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimaryDark</item>
        <item name="tabSelectedTextColor">@color/colorText</item>
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabIndicatorHeight">@dimen/tab_indicator_height</item>
        <item name="tabTextAppearance">@style/CategoryTabTextAppearance</item>
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
    </style>

    <!-- Text appearance style for a category tab -->
    <style name="CategoryTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

</resources>
